<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdb"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF5D5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/eventNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chittagong Tour"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/createTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="26/9/2017"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF5D5"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startOnTv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="23/10/2018"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/daysLeftTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 days left"
            android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>